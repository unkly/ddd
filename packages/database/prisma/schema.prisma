datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

model Follower {
  userId String @id
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Post {
  postId String @id
  title String
  detail String
  calories Int?
  difficulty Int
  materials Post_Material[]
  hearts Post_Like[]
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Post_Material {
  postMaterialId String @id
  postId String
  post Post @relation(fields: [postId], references: [postId])
  materialId String
  quantity Int
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Material {
  materialId String @id
  name String
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Post_Like {
  postLikeId String @id
  userId String
  postId String
  post Post @relation(fields: [postId], references: [postId])
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Mail_Template {
  mailTemplateId String @id
  actionDivision Int
  content String
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Sms_Template {
  smsTemplateId String @id
  actionDivision Int
  content String
  createdAt DateTime @default(now())
  updatedAt DateTime?
  updatedBy String?
}

model Mail_Notification {
  mailNotificationId String @id
  mailTemplateId String
  actionDivision Int
  content String
  status Int
  email String
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Sms_Notification {
  smsNotificationId String @id
  smsTemplateId String
  actionDivision Int
  content String
  status Int
  tel String
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}