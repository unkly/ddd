datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5433/mydb?schema=mydb"
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

model User {
  userId String @id
  email String @unique
  name String
  icon String?
  status Int
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
  likes Post_Like[]
  follower Follower[]
}

model Follower {
  userId String @id
  user User @relation(fields: [userId], references: [userId])
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Post {
  postId String @id
  title String
  detail String
  calorie Int
  difficulty Int
  materials Post_Material[]
  process Process[]
  hearts Post_Like[]
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Post_Material {
  postMaterialId String @id
  postId String
  post Post @relation(fields: [postId], references: [postId])
  materialId String
  quantity Int
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Material {
  materialId String @id
  name String
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Process {
  uuid String @id
  text String
  image String?
  postId String
  post Post @relation(fields: [postId], references: [postId])
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Post_Like {
  postLikeId String @id
  userId String
  user User @relation(fields: [userId], references: [userId])
  postId String
  post Post @relation(fields: [postId], references: [postId])
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Mail_Template {
  mailTemplateId String @id
  actionDivision Int
  content String
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Sms_Template {
  smsTemplateId String @id
  actionDivision Int
  content String
  createdAt DateTime @default(now())
  updatedAt DateTime?
  updatedBy String?
}

model Mail_Notification {
  mailNotificationId String @id
  mailTemplateId String
  actionDivision Int
  content String
  status Int
  email String
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}

model Sms_Notification {
  smsNotificationId String @id
  smsTemplateId String
  actionDivision Int
  content String
  status Int
  tel String
  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
}