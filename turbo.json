{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "API_PORT",
    "DATABASE_URL",
    "NEXT_PUBLIC_USE_MOCK",
    "AUTH0_CLIENT_ID",
    "AUTH0_CLIENT_SECRET",
    "NEXT_PUBLIC_AUTH0_ISSUER",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "NEXT_PUBLIC_API_URL"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "cache": false
    },
    "push": {
      "cache": false
    },
    "studio": {
      "cache": false
    },
    "migrate": {
      "cache": false
    },
    "watch": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    }
  }
}
